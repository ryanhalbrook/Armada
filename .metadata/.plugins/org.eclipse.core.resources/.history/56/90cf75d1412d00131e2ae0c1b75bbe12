import java.awt.BorderLayout;
import java.awt.Graphics;
import java.awt.Graphics2D;
import java.awt.Rectangle;
import java.awt.geom.AffineTransform;

import javax.swing.JFrame;
import javax.swing.JPanel;

public class Rotation extends JPanel{

	/**
	 * 
	 */
	private static final long serialVersionUID = 1L;
	public static void main(String[] args) {
		JFrame frame = new JFrame("Rotation");
		Rotation r = new Rotation();
		frame.getContentPane().add( BorderLayout.CENTER, r );
		frame.setSize( 400, 400 );
        frame.setVisible(true);
	}

		
		Rectangle rect = new Rectangle(0, 0, 100, 100);
	public void paintComponent(Graphics g){
		AffineTransform at = new AffineTransform();
		at.rotate(Math.toRadians(0));
		at.translate(150, 150);
	
		Graphics2D g2 = (Graphics2D) g;
		g2.transform(at);
		g2.draw(rect);
		
		AffineTransform at2 = new AffineTransform();
		at2.concatenate(at);
		at2.translate(-150, -150);
		at2.rotate(Math.toRadians(45));
		
		g2.transform(at2);
		g2.draw(rect);
		
		AffineTransform at3 = new AffineTransform();
		at3.setToRotation(Math.toRadians(300));
		g2.transform(at3);
		g2.draw(rect);
		
		
		
	}
}


