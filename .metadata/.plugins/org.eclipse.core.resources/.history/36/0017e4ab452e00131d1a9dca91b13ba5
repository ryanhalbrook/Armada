import java.awt.Graphics;

import javax.swing.JPanel;

public class TestPanel extends JPanel {
	
		/**
		 * 
		 */
		private static final long serialVersionUID = 1L;
		int x=200;
		int y=200;
		int w=50;
		int h=50;
		double an=45;
		String img="fighter";
		int s=100;
		int all = 1;
		
		private int time=200;
		private int status=0;
		
		DynamicElement de = new DynamicElement(x,y,w,h,an,img,0,0,0,s,all,0,0);
		DynamicAnimation da = new DynamicAnimation(de);
		public void paintComponent(Graphics g){
			da.draw(g);
			rotate(da.calcRotationAngle(300, 0),g);
		}
		public void rotate(double ang,Graphics g){
			double angle=ang;
			if((angle>0 && ang>0)||(angle<0 &&ang<0))
			{
				System.out.println("a= "+angle+" deltaA= "+ang+" angle=" +de.getAngle());
				de.setAngle(de.getAngle()+ang/time);
				da.draw(g);
	        	angle-=ang/time;
	        	
	        }
		}
	
}
